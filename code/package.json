{
  "name": "nmos-device-control-mock",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "copy-deps": "shx mkdir -p ./dist/node_modules && shx cp -r node_modules ./dist",
    "copy-config": "shx mkdir -p ./dist/server && shx mkdir -p ./dist/server/config && shx cp -u config/config.json ./dist/server/config",
    "build-and-start": "npm run build && npm run copy-config && node dist/server/Server.js",
    "start": "node dist/server/Server.js",
    "preserve": "npm run build",
    "s": "npm run serve",
    "serve": "concurrently \"npm run build.w\" \"npm run copy-config\" \"npm run watch\"",
    "watch": "wait-on ./dist/server/config/config.json && nodemon --watch ./dist/server ./dist/server/Server.js",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "prebuild": "npm install --no-optional",
    "b": "npm run build.w",
    "build": "npm run copy-deps && tsc",
    "build-ci": "tsc",
    "build.w": "npm run copy-deps && tsc -w"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.5",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "json-ignore": "^0.4.0",
    "sdp-transform": "^3.0.0",
    "shx": "^0.4.0",
    "tai64": "^1.0.0",
    "timestamp-nano": "^1.0.1",
    "uuid": "^13.0.0",
    "wait-on": "^9.0.4",
    "write-file-atomic": "^7.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/sdp-transform": "^2.15.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.39.2",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.3",
    "typescript": "^5.9.3"
  }
}
